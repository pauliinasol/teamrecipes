                        <form style="width:500px" method="post">

                              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                            <div class="form-group">

                                <label>Userame</label>
                                <input type="newName" name="name" class="form-control" id="name" placeholder="Name">
                            </div>
                            <div class="form-group">

                                <label>Profile image url</label>
                                <input type="newImage" name="image_url" class="form-control" id="image_url" placeholder="Image url">
                            </div>
                            <div class="form-group">

                                <label>Email</label>
                                <input type="newEmail" name="email" class="form-control" id="email" placeholder="Email">
                            </div>


                            <div class="form-group">

                                <label>Password</label>
                                <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                                <input type="password" name="password_confirmation" class="form-control <%= 'error' if @user && @user.errors.messages[:password_confirmation]  %>" id="password_confirmation" placeholder="Confirm password">
                            </div>


                            <p><button type="submit" class="btn btn-warning">Create account</button></p>
                        </form>

                      </div>
